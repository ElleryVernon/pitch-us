# OpenRouter (Required)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4.1-mini
OPENROUTER_OUTLINE_MODEL=mistralai/ministral-8b-2412
OPENROUTER_IMAGE_MODEL=google/gemini-2.5-flash-image-preview

# Database (Supabase PostgreSQL - Required)
# Pooler connection for runtime (pgbouncer)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-1-ap-south-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-1-ap-south-1.pooler.supabase.com:5432/postgres"

# Supabase Storage (Optional)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=
SUPABASE_STORAGE_BUCKET=pitchdecks
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=pitchdecks

# Image Provider (Optional)
# - openrouter: Generate images via OpenRouter API (reuses OPENROUTER_API_KEY)
# - pexels: Free image search via Pexels (default)
# - pixabay: Free image search via Pixabay
# - openai: OpenAI DALL-E/GPT-Image (requires separate key)
IMAGE_PROVIDER=pexels
PEXELS_API_KEY=
PIXABAY_API_KEY=
OPENAI_API_KEY=

# Analytics (Optional)
DISABLE_ANONYMOUS_TRACKING=false

# Chromium/Puppeteer (Optional)
PUPPETEER_EXECUTABLE_PATH=
CHROMIUM_DOWNLOAD_URL=

# Temp Directory (Optional, fallback when Supabase not configured)
TEMP_DIRECTORY=/tmp/pitch-us
