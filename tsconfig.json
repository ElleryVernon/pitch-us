{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/ui": ["./src/shared/components/ui"],
      "@/components/ui/*": ["./src/shared/components/ui/*"],
      "@/components/*": ["./src/shared/components/*"],
      "@/lib/*": ["./src/shared/lib/*"],
      "@/models/*": ["./src/shared/models/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/stores": ["./src/stores"],
      "@/server/*": ["./src/server/*"],
      "@/presentation-templates/*": ["./src/presentation-templates/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/generated/*": ["./generated/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next-build/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
